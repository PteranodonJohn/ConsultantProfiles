@model ConsultantProfiles.Models.RegisterModel
@{
    ViewBag.Title = "Register";
}

<div class="container" style="max-width: 340px;">
  @using (Html.BeginForm("Register", "AccountController",
                         new { ReturnUrl = ViewBag.ReturnUrl },
                         FormMethod.Post, new { @class = "form-signin" }))
  {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    <h2 class="form-signin-heading">Register Profile</h2>

    <div class="form-group">
      @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Email address" } )
    </div>

    <div class="form-group">
      @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" } )
    </div>

    <div class="form-group">
      @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Password confirmation" } )
    </div>

    <input type="submit" value="Register" class="btn btn-primary btn-lg btn-block" />
  }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
